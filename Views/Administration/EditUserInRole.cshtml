@model List<UserRoleViewModel>;
@{
    ViewBag.Title = "Edit User In This Role";
    var roleId = ViewBag.RoleId;
}
<form method="post" asp-controller="Administration" asp-action="EditUserInRole">
    <div class="card mb-3">
        <div class="card-header">
            <h3>Add or remove User from role.</h3>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
            <div class="form-check m-1">
                <input hidden asp-for="@Model[i].UserId" />
                <input hidden asp-for="@Model[i].Username" />

                <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                <label class="form-check-label" asp-for="@Model[i].IsSelected">
                    @Model[i].Username
                </label>
            </div>

            }
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary" asp-route-roleId="@roleId" style="width:auto;">Update</button>
            <a asp-controller="Administration" asp-action="EditRole" asp-route-id="@roleId" class="btn btn-danger" style="width:auto;">Cancel</a>
        </div>
    </div>
</form>


