@model CreateRoleViewModel
@{

    ViewBag.Title = "Create Role";
}
<div class="container-fluid">
    <form enctype="multipart/form-data" asp-controller="Administration" asp-action="CreateRole" method="post" class="mt-3">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary" style="width:auto;">Create Role</button>
                <a asp-controller="Administration" asp-action="ListRole" class="btn btn-danger">Cancel</a>
            </div>
        </div>
        @section Scripts{
            <script>
                $(function () {
                });
            </script>
        }
    </form>
</div>