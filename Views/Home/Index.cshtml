@model IEnumerable<Employee>

@{
    ViewBag.Title = "Employee List";

}
<div class="container-fluid">
    <div class="card-deck">
        @foreach (var item in Model)
        {
            var photoPath = "/Images/" + (item.PhotoPath ?? "noimage.jpg");
            <div class="card m-3" style="min-width:18rem;max-width:30.5%;">
                <div class="card-header">
                    <h3>@item.Name</h3>
                </div>
                <img class="card-img-top imgThumbnail" src="@photoPath" />
                <div class="card-footer text-center">
                    <a asp-controller="Home" asp-action="Details" asp-route-Id="@item.Id" class="btn btn-primary m-1">View</a>
                    <a asp-controller="Home" asp-action="Edit" asp-route-Id="@item.Id" class="btn btn-primary m-1">Edit</a>
                    <a asp-controller="Home" asp-action="Details" asp-route-Id="@item.Id" class="btn btn-danger m-1">Delete</a>
                </div>
            </div>
        }
    </div>
</div>
@section Scripts{

}
